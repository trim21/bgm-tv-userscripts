{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "skipLibCheck": false,
    "allowImportingTsExtensions": true,
    "strict": true,
    "strictNullChecks": true,
    "noEmit": true,
    "allowJs": false
  },
  "include": ["./scripts/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "./config/", "*/config/**"]
}
