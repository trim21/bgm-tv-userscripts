{
  "name": "bgm-wiki-rev-diff",
  "description": "Build your UserScript with webpack",
  "version": "0.0.4",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "./packages/*"
  ],
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all",
    "singleQuote": true,
    "endOfLine": "lf",
    "semi": true
  },
  "scripts": {
    "bump": "node bump.js",
    "lint": "run-p 'lint:*'",
    "format": "run-s -c format:*",
    "lint:eslint": "eslint --ext cjs,js,ts ./",
    "lint:prettier": "prettier --check .",
    "lint:tsc": "tsc --noEmit",
    "format:eslint": "eslint --fix --ext cjs,js,ts ./",
    "format:prettier": "prettier --write .",
    "wiki-rev-diff": "yarn workspace @script/wiki-rev-diff",
    "hover-subject-info": "yarn workspace @script/hover-subject-info",
    "test": "yarn workspaces foreach --include '@script/*' run test",
    "build": "yarn workspaces foreach --include '@script/*' run build",
    "lint-staged": "lint-staged --quiet",
    "prepare": "husky install"
  },
  "author": {
    "name": "Trim21",
    "email": "i@trim21.me"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/trim21/bgm-tv-userscripts"
  },
  "lint-staged": {
    "*.{cjs,js,ts,json,yml,yaml}": "prettier --write",
    "*.{cjs,js,ts}": "eslint --fix"
  },
  "devDependencies": {
    "@actions/exec": "1.1.1",
    "@babel/core": "7.21.5",
    "@babel/preset-env": "7.21.5",
    "@babel/preset-typescript": "7.21.5",
    "@typescript-eslint/eslint-plugin": "5.59.1",
    "@typescript-eslint/parser": "5.59.1",
    "babel-loader": "9.1.2",
    "eslint": "8.39.0",
    "eslint-config-standard-with-typescript": "34.0.1",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-n": "15.7.0",
    "eslint-plugin-promise": "6.1.1",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.8",
    "semver": "7.5.0",
    "typescript": "5.0.4",
    "userscript-metadata-webpack-plugin": "0.4.0",
    "webpack": "5.81.0",
    "webpack-cli": "5.0.2",
    "webpack-livereload-plugin": "3.0.2",
    "webpack-merge": "5.8.0",
    "yargs": "17.7.2"
  },
  "packageManager": "yarn@3.5.1"
}
