{
  "name": "bgm-wiki-rev-diff",
  "description": "Build your UserScript with webpack",
  "version": "0.0.4",
  "private": true,
  "license": "MIT",
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all",
    "singleQuote": true,
    "endOfLine": "lf",
    "semi": true
  },
  "scripts": {
    "bump": "node bump.js",
    "tsc": "tsc --noEmit",
    "lint": "eslint --ext cjs,js,ts ./",
    "format": "prettier --list-different  -w .",
    "format:check": "prettier --check .",
    "test": "jest",
    "build": "webpack -c scripts/*/config/webpack.config.prod.js",
    "lint-staged": "lint-staged"
  },
  "author": {
    "name": "Trim21",
    "email": "i@trim21.me"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/trim21/bgm-tv-userscripts"
  },
  "lint-staged": {
    "*.{cjs,js,ts,json,yml,yaml}": "prettier --write",
    "*.{cjs,js,ts}": "eslint --fix"
  },
  "dependencies": {
    "diff": "7.0.0",
    "diff2html": "3.4.48",
    "jquery": "3.7.1",
    "lodash": "4.17.21"
  },
  "browserslist": [
    "chrome >= 102",
    "last 10 Edge version",
    "last 2 Safari Major version",
    "last 10 Firefox version"
  ],
  "devDependencies": {
    "@actions/exec": "1.1.1",
    "@babel/core": "7.25.2",
    "@babel/preset-env": "7.25.4",
    "@babel/preset-typescript": "7.24.7",
    "@jest/globals": "29.7.0",
    "@types/diff": "5.2.2",
    "@types/greasemonkey": "4.0.7",
    "@types/hogan.js": "3.0.5",
    "@types/jest": "29.5.12",
    "@types/jquery": "3.5.30",
    "@types/lodash": "4.17.7",
    "@typescript-eslint/eslint-plugin": "8.5.0",
    "@typescript-eslint/parser": "8.5.0",
    "babel-loader": "9.1.3",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.30.0",
    "eslint-plugin-n": "17.10.2",
    "eslint-plugin-promise": "7.1.0",
    "husky": "9.1.6",
    "jest": "29.7.0",
    "lint-staged": "15.2.10",
    "prettier": "3.3.3",
    "raw-loader": "4.0.2",
    "semver": "7.6.3",
    "ts-jest": "29.2.5",
    "typescript": "5.5.4",
    "userscript-metadata-webpack-plugin": "0.4.0",
    "webpack": "5.94.0",
    "webpack-cli": "5.1.4",
    "webpack-livereload-plugin": "3.0.2",
    "webpack-merge": "6.0.1",
    "yargs": "17.7.2"
  },
  "packageManager": "yarn@4.4.1"
}
