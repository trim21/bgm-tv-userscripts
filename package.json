{
  "name": "bgm-wiki-rev-diff",
  "description": "Build your UserScript with webpack",
  "version": "0.2.4",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Trim21",
    "email": "i@trim21.me"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "semi": true
  },
  "eslintIgnore": [
    "dist/*.js"
  ],
  "scripts": {
    "lint": "run-p lint:* ",
    "format": "run-s -c format:*",
    "lint:eslint": "eslint --ext cjs,js,ts ./",
    "lint:prettier": "prettier --check .",
    "lint:tsc": "tsc --noEmit",
    "format:prettier": "prettier --write .",
    "format:eslint": "eslint --fix --ext cjs,js,ts ./",
    "anylize": "npm_config_report=true webpack --config config/webpack.config.production.js",
    "postversion": "git push",
    "build": "run-s -c build:*",
    "build:wiki-ref-diff": "webpack --config wiki-ref-diff/config/webpack.config.prod.js",
    "dev": "webpack --config wiki-ref-diff/config/webpack.config.dev.js",
    "lint-staged": "lint-staged",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Trim21/bgm-wiki-rev-diff"
  },
  "dependencies": {
    "diff": "5.1.0",
    "diff2html": "3.4.19",
    "esbuild": "0.15.10",
    "esbuild-loader": "2.20.0",
    "jquery": "3.6.1",
    "lodash": "4.17.21"
  },
  "lint-staged": {
    "*.{cjs,js,ts,json,yml,yaml}": "prettier --write",
    "*.{cjs,js,ts}": "eslint --fix"
  },
  "devDependencies": {
    "@types/diff": "5.0.2",
    "@types/greasemonkey": "4.0.4",
    "@types/hogan.js": "3.0.1",
    "@types/jquery": "3.5.14",
    "@types/lodash": "4.14.186",
    "@typescript-eslint/eslint-plugin": "5.38.1",
    "@typescript-eslint/parser": "5.38.1",
    "eslint": "8.24.0",
    "eslint-config-standard-with-typescript": "23.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-n": "15.3.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.0.1",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "typescript": "4.8.4",
    "userscript-metadata-webpack-plugin": "0.1.5",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0",
    "webpack-livereload-plugin": "3.0.2",
    "webpack-merge": "5.8.0"
  }
}
